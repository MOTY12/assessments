# Environment Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# MongoDB Database Configuration
MONGODB_URI=mongodb://localhost:27017/assessment_db

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# Email Configuration (Optional - for future use)
EMAIL_FROM=noreply@assessment.com
EMAIL_SERVICE=gmail
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_HOST=
EMAIL_PORT=587

# File Upload Configuration (Optional - for future use)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Rate Limiting (Optional - for future use)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OnePipe Wallet Integration
ONEPIPE_BASE_URL=https://api.onepipe.io/v1
ONEPIPE_API_KEY=your-onepipe-api-key
ONEPIPE_SECRET_KEY=your-onepipe-secret-key
ONEPIPE_BANK_CODE=ONEPIPE
